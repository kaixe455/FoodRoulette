---
import { getTestedFoods } from "@services/foods.js";

const testedFoods = await getTestedFoods();
---

<div class="grid grid-rows-1 grid-flow-row font-bungee text-4xl gap-4 my-10">
  <div class="row-span-1 flex flex-col items-center">
    <span id="firstItem" class="opacity-100">FOOD WE HAVE TESTED</span>
  </div>
  {
    testedFoods.map((food) => {
      const { name } = food;
      return (
        <>
          <div class="row-span-1 flex flex-col items-center">
            <span id="firstItem" class="opacity-100 text-3xl">
              {name}
            </span>
          </div>
        </>
      );
    })
  }
</div>
